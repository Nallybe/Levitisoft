<!doctype html>
<html lang="es">

{{>headerId}}

<body>


    <!--Barra de navegación-->
    <div class="wrapper ">
        <div class="sidebar" data-color="black">
            <!--
        Tip 1: You can change the color of the sidebar using: data-color="blue | green | orange | red | yellow"
    -->
            <div class="logo">
                <a href="" class="simple-text" style="color:white;">
                    Levitisoft
                </a>
            </div>
            {{#if name}}
            <div class="logo">
                <a href="" class="simple-text" style="color:white;">
                    <i class="fa-solid fa-circle-user fa-2xl" style="width: 45px;"> </i>{{name}}
                </a>
            </div>
            {{/if}}
            <div class="sidebar-wrapper" id="sidebar-wrapper">
                <ul class="nav">
                    <li>
                        <a href="/dashboard">
                            <i class="fa fa-house" style="color:white;"></i>
                            <p style="color:white;">Home</p>
                        </a>
                    </li>
                    <li class="active">
                        <a href="/roles" style="background-color: white">
                            <i class="fa fa-gear" style="color: black;"></i>
                            <p style="color: black;">Roles</p>
                        </a>
                    </li>
                    <li>
                        <a href="/usuarios">
                            <i class="fa fa-users" style="color:white;"></i>
                            <p style="color:white;">Usuarios</p>
                        </a>
                    </li>
                    <li>
                        <a href="/compras">
                            <i class="fa fa-shop" style="color:white;"></i>
                            <p style="color:white;">Compras</p>
                        </a>
                    </li>
                    <li>
                        <a href="/insumos">
                            <i class="fa fa-box" style="color:white;"></i>
                            <p style="color:white;">Insumos</p>
                        </a>
                    </li>
                    <li>
                        <a href="/produccion">
                            <i class="fa fa-scissors" style="color:white;"></i>
                            <p style="color:white;">Producción</p>
                        </a>
                    </li>
                    <li>
                        <a href="/ProductosDash">
                            <i class="fa fa-boxes-packing" style="color:white;"></i>
                            <p style="color:white;">Productos</p>
                        </a>
                    </li>
                    <li>
                        <a href="/clientes">
                            <i class="fa fa-user" style="color:white;"></i>
                            <p style="color:white;">Clientes</p>
                        </a>
                    </li>
                    <li>
                        <a href="/ventas">
                            <i class="fa fa-truck-fast" style="color:white;"></i>
                            <p style="color:white;">Ventas</p>
                        </a>
                    </li>
                    <li>
                        <a href="/reparaciones">
                            <i class="fa fa-screwdriver-wrench" style="color:white;"></i>
                            <p style="color:white;">Reparaciones</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel" id="main-panel">
            <!-- Navbar -->
            <nav class="navbar navbar-expand navbar-absolute" style="background-color: rgb(124, 123, 123);">
                <div class="container-fluid">
                    <div class="navbar-wrapper">
                        <div class="navbar-toggle">
                            <button type="button" class="navbar-toggler">
                                <span class="navbar-toggler-bar bar1"></span>
                                <span class="navbar-toggler-bar bar2"></span>
                                <span class="navbar-toggler-bar bar3"></span>
                            </button>
                        </div>
                        <a class="navbar-brand" href="#" style="margin-left: 12px;">Permisos</a>
                    </div>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation"
                        aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end" id="navigation">
                        <a class="nav-link" href="/logout">
                            <i class="fa fa-right-from-bracket" style="margin-right:20px;"></i>
                            <p>
                                <span class="d-lg-none d-md-block">Salir</span>
                            </p>
                        </a>
                    </div>
                </div>
            </nav>

            <!--Barra de navegación-->
            <br><br><br>
            <div class="container">
                <a href="/roles" style="color:black; text-decoration:none;"><i class="fa fa-arrow-left fa-2x"></i></a>
            </div>
            <center>
                <div class="container">

                    <br>
                    <table class="table" style="text-align:center;">
                        <thead style="background-color: #282d32; color:white;">
                            <tr>
                                <th>Permiso</th>
                                <th>Estado</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each permisos}}
                            <tr>
                                <td>{{this.nombrePermisos}}</td>
                                <td>
                                    <div class="custom-control custom-switch">
                                        <input type="checkbox" class="custom-control-input"
                                            id="permiso{{this.idPermisos}}" {{#if this.estado}}checked{{/if}} disabled>
                                        <label class="custom-control-label" for="permiso{{this.idPermisos}}"></label>
                                    </div>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </center>
</body>
