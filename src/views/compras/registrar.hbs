    function eliminarInsumo(id) {
      insumo = document.getElementById(id);
      if (!insumo) {
        alert("Error");
      } else {
        let toT = "t" + id;

        //decrementar total
        var inputNumber = document.getElementById("totalC1");
        var valorActual = parseInt(inputNumber.value);
        //alert("Valor actual " + valorActual)

        var inputNumber2 = document.getElementById(toT);
        var valorRestar = parseInt(inputNumber2.value);

        //alert("Valor restar " + valorRestar);

        inputNumber.value = valorActual - valorRestar;
        //decrementar total

        padre = insumo.parentNode;
        padre.removeChild(insumo);
        //alert("Insumo Eliminado");
        Swal.fire({
          position: 'top-end',
          icon: 'success',
          title: 'Insumo Eliminado',
          showConfirmButton: false,
          timer: 1000
        });
      }
    }
